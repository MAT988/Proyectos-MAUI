<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MAUI1.EditPage"
             Title="Editar Plato">
    <StackLayout Padding="10">
        <Entry x:Name="NombreEntry" Placeholder="Nombre del Plato"/>
        <Entry x:Name="CostoEntry" Placeholder="Costo" Keyboard="Numeric"/>
        <Entry x:Name="IngredientesEntry" Placeholder="Ingredientes"/>
        <Button Text="Guardar" Clicked="OnSaveClicked"/>
    </StackLayout>
</ContentPage>